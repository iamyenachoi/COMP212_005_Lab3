<Window x:Class="_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:be="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:_1"
        mc:Ignorable="d"
        Title="Restaurant Bill Calculator" Height="560" Width="800">
    <Grid RenderTransformOrigin="0.5,0.5" Margin="0,0,3,18">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.147"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>

        <StatusBar HorizontalAlignment="Left" Height="100" Margin="33,10,0,0" VerticalAlignment="Top" Width="731">
            <StatusBarItem>
                <Image Height="100" Width="320" MouseDown="Image_MouseDown"  Source="/centennialcollege_logo_.jpg" />
            </StatusBarItem>
            <StatusBarItem>
                <Label FontSize="20px" FontWeight="Bold" Name="studentnameHolder" />
            </StatusBarItem>
        </StatusBar>

        <Label Name="food_Beverage" 
               Content="Beverage"
               HorizontalAlignment="Left" 
               Margin="90,129,0,0" 
               VerticalAlignment="Top"
               Width="120" Height="30"/>
        <ComboBox Name="cmbfood_Beverage"
                  HorizontalAlignment="Left" 
                  Margin="92,163,0,0" 
                  VerticalAlignment="Top" 
                  Width="170" Height="22" 
                  SelectionChanged="Cmbfood_Beverage_SelectionChanged"/>

        <Label Name="food_Appetizer" 
               Content="Appetizer"
               HorizontalAlignment="Left" 
               Margin="94,208,0,0" 
               VerticalAlignment="Top"
               Height="30" Width="134"
               RenderTransformOrigin="-2.378,0.9" />
        <ComboBox Name="cmbfood_Appetizer"
                  HorizontalAlignment="Left" 
                  Margin="93,241,0,0" 
                  VerticalAlignment="Top" 
                  Width="163" Height="22" 
                  SelectionChanged="Cmbfood_Appetizer_SelectionChanged"/>

        <Label Name="food_MainCourse"  
               Content="Main"
               HorizontalAlignment="Left"
               Margin="416,130,0,0"
               VerticalAlignment="Top" Width="91" Height="30"/>
        <ComboBox Name="cmbfood_MainCourse"  
                  HorizontalAlignment="Left" 
                  Margin="419,158,0,0" 
                  VerticalAlignment="Top"
                  Width="170" 
                  SelectionChanged="Cmbfood_MainCourse_SelectionChanged"/>

        <Label Name="food_Dessert" 
               Content="Dessert" 
               HorizontalAlignment="Left" 
               Margin="424,215,0,0" 
               VerticalAlignment="Top" 
               RenderTransformOrigin="0.539,1.711" 
               Height="30" Width="109"/>
        <ComboBox Name="cmbfood_Dessert" 
                  HorizontalAlignment="Left"
                  Margin="426,245,0,0"
                  VerticalAlignment="Top"
                  Width="169" Height="22" 
                  SelectionChanged="Cmbfood_Dessert_SelectionChanged"/>

        <DataGrid Name="gridAllFood" 
                  ItemsSource="{Binding Source=foodCollection,XPath=*, Mode=TwoWay}" 
                  AutoGenerateColumns="False" HorizontalAlignment="Left" 
                  Height="155" Margin="90,281,0,0" 
                  VerticalAlignment="Top" Width="620"
                  SelectionChanged="GridAllFood_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" 
                                    Binding="{Binding Name}" 
                                    IsReadOnly="True"
                                    Width="170"/>
                <DataGridTextColumn Header="Category" 
                                    Binding="{Binding Category}" 
                                    IsReadOnly="True"
                                    Width="170"/>
                <DataGridTextColumn Header="Amount"
                                    Binding="{Binding Count}"
                                    IsReadOnly="False"
                                    Width="100"/>
                <DataGridTextColumn Header="Unit Price $" 
                                    Binding="{Binding Price}" 
                                    IsReadOnly="True"
                                    Width="170"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label FontSize="16" 
               FontWeight="Bold" 
               Content="Sub Total($): "
               HorizontalAlignment="Left" 
               Margin="74,451,0,0"
               VerticalAlignment="Top"
               Width="107" Height="36"/>
        <Label Name="lblTotalAmount"
               FontSize="18"
               FontWeight="Bold" 
               Content="0"
               HorizontalAlignment="Left" 
               Margin="188,451,0,0" 
               VerticalAlignment="Top" 
               Height="32" Width="86" 
               RenderTransformOrigin="-0.294,0.404"/>
        <Button Background="Red" 
                Content="Clear All" 
                HorizontalAlignment="Left" 
                Margin="656,457,0,0" 
                VerticalAlignment="Top" 
                Width="108" Height="32"
                FontWeight="Bold"
                RenderTransformOrigin="0.5,0.5"
                Click="Button_Click"/>
        <Label FontSize="18"
               FontWeight="Bold" 
               Content="Tax($):" 
               HorizontalAlignment="Left"
               Margin="289,452,0,0"
               VerticalAlignment="Top"
               RenderTransformOrigin="0.73,1.452"
               Height="33"/>
        <Label FontSize="18" 
               FontWeight="Bold" 
               Content="0" Name="lblTax" 
               HorizontalAlignment="Left" 
               Margin="375,455,0,0" 
               VerticalAlignment="Top"
               Height="31" Width="82"/>
        <Label FontSize="18" 
               FontWeight="Bold" 
               Content="Total($):" 
               HorizontalAlignment="Left"
               Margin="476,453,0,0" 
               VerticalAlignment="Top"
               Height="33" Width="82"/>
        <Label FontSize="18" 
               FontWeight="Bold"  
               Name="lblTotal" 
               Content="0"
               HorizontalAlignment="Left"
               Margin="573,454,0,0" 
               VerticalAlignment="Top" 
               Height="32" Width="68"/>


    </Grid>
</Window>
